<?xml version='1.0' encoding='utf-8'?>
<widget id="com.karthik.cordovatest"
    version="1.0.0"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0"
    xmlns:gap="http://phonegap.com/ns/1.0">
    <name>IntegrationCordova</name>
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <preference name="loglevel" value="DEBUG" />
    <feature name="CleverTapPlugin">
        <param name="android-package" value="com.clevertap.cordova.CleverTapPlugin" />
    </feature>

    <preference name="android-build-tool" value="gradle" />

    <gap:plugin name="clevertap-cordova" source="npm">
        <param name="CLEVERTAP_ACCOUNT_ID" value="65R-654-5Z6Z" />
        <param name="CLEVERTAP_TOKEN" value="456-256" />
        <param name="GCM_PROJECT_NUMBER" value="487275975172" /> // for v1.2.5 and lower of the plugin
    </gap:plugin>

</widget>
